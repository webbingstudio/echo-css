mixin codeblock(language)
  .codeblock
    pre
      if language !== undefined
        code(class=`language-${language}`)
          block
      else
        block

mixin label(classes)
  - const tag = "span";

  #{tag}(class="echo-label",class=classes)
    block

mixin pagehead(wrapClasses = [], titleClasses = [])
  div(class="echo-doc-pagehead",class=wrapClasses)
    h1(class="echo-doc-pagehead-title",class=titleClasses)
      block

mixin nextNav(order)
  -
    let nextID = Number.parseInt(order)+1;
    let next = collections.all.filter((a) => Number.parseInt(a.data.order) === nextID);
  
  if next.length === 0
    -
      nextID = (Math.trunc(order/10)*10)+11;
      next = collections.all.filter((a) => Number.parseInt(a.data.order) === nextID);

  each item in next
    p 
    .echo-buttons.echo-margin-top-lg
      .echo-buttons-item
        a(
          href=item.url,
          class="echo-button echo-button-lg echo-button-style-b echo-button-icon echo-button-icon-arrow"
        )
          span.echo-doc-button-guide
            | Next
          | #{item.data.pageTitle}
