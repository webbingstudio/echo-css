- const posts = collections.all.filter((a)=>{return a.data.order > 0})
- posts.sort((a,b)=>{return a.data.order > b.data.order ? 1 : -1})

h2.echo-doc-sub-title Documentation
nav.echo-doc-sitemap.echo-nav.echo-nav-vertical
  ul.echo-nav-list
    li.echo-nav-item <span class="echo-doc-sitemap-header echo-nav-label">はじめに</span>
      ul.echo-doc-sitemap-list-flat.echo-nav-list.echo-nav-children
        each post in posts
          if ((post.data.order >= 1)&&(post.data.order < 10))
            li.echo-nav-item
              a.echo-nav-label(href=post.url) #{post.data.pageTitle}
