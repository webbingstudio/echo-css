{
  "name": "echo-css",
  "version": "3.1.2",
  "description": "CSS framework optimized for CMS theming",
  "main": "index.js",
  "scripts": {
    "build":"npm-run-all -s build:*",
    "build:scss":"sass src/scss/test.scss:dist/css/test.css --style expanded --no-source-map",
    "build:scssmin":"sass src/scss/test.scss:dist/css/test.min.css --style compressed --no-source-map",
    "build:postcss":"postcss dist/css/test.css -c=postcss.config.js --no-map -o dist/css/test.css",
    "build:postcssmin":"postcss dist/css/test.min.css -c=postcss.config.js --no-map -o dist/css/test.min.css"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/webbingstudio/echo-css.git"
  },
  "keywords": [],
  "author": "webbingstudio",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/webbingstudio/echo-css/issues"
  },
  "homepage": "https://echocss.webbingstudio.com",
  "devDependencies": {
    "autoprefixer": "^10.3.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.3.6",
    "postcss-cli": "^8.3.1",
    "sass": "^1.37.5"
  }
}
